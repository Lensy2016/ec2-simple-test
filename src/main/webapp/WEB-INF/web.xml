<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>SimpleController</display-name>

    <!-- Error Pages -->
    <error-page>
        <error-code>500</error-code>
        <location>/error</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/page-not-found</location>
    </error-page>

    <!-- Spring profiles enabled; configured at build-time using Maven property 'spring.profiles.active' ( not to be too confusing :) ) -->
    <context-param>
        <param-name>spring.profiles.active</param-name>
        <param-value>${spring.profiles}</param-value>
    </context-param>

</web-app>
